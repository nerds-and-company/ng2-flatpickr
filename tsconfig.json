{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "declarationMap": false,
    "noImplicitAny": true,
    "module": "es2015",
    "target": "es5",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": false,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableIvy": true
  },
  "files": [
    "./public-api.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
